<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ReceiveCallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Name"
        android:textSize="25sp"
        android:textColor="#000000"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ProfileImage"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile_border"
        android:background="@drawable/default_profile_image" />

    <TextView
        android:id="@+id/ProfileMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text=""
        android:textSize="17sp"
        />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp">


        <ImageButton

            android:id="@+id/HangUpBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:onClick="HangUp"
            android:src="@drawable/hang_up_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="100dp"
            android:background="#FFFFFF"

         />

        <ImageButton

            android:id="@+id/ReceiveCallBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:onClick="ReceiveCall"
            android:src="@drawable/receive_call_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginEnd="100dp"
            android:background="#FFFFFF"

        />


    </RelativeLayout>


</RelativeLayout>